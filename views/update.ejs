<%- include('partials/header') %>
    <form action="/posts/<%=post._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="postTitle">Title</label>
            <input type="text" class="form-control" id="postTitle" placeholder="Title" name="title" value="<%= post.title %>">
        </div>
        <div class="form-group">
            <label for="postAuthor">Author</label>
            <input type="text" class="form-control" id="postAuthor" placeholder="Author" name="author" value="<%= post.author %>">
        </div>
        <div class="form-group">
            <label for="postContent">post</label>
            <textarea name="content" class="form-control" id="postContent" cols="60" rows="10" placeholder="Post"><%= post.content %></textarea>
        </div>
        <input type="submit" value="Update" class="btn btn-large btn-primary">
    </form>
<%- include('partials/footer') %>
